@model HRProject.UI.Models.HomeControllerModels.AddPositionPageModel
    @{
        ViewBag.Title = "AddPosition";
    }


    <div class="row my-5">
        <div class="col-md-10 offset-1">
            @using (Html.BeginForm())
            {
                <div class="form-group row">
                    @if (ViewBag.AddPositionResult != null)
                    {
                        <h3>@ViewBag.AddPositionResult</h3>
                    }
                </div>
                <div class="form-group row">
                    <div class="col-md-12 text-left">
                        <h1 class="text-info float-left"><span class="fa fa-plus mr-2"></span>ADD POSITION</h1>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">POSITIONID</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Position.POSITIONID, new { @class = "form-control", type = "text", required = "required" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">POSITIONNAME</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Position.POSITIONNAME, new { @class = "form-control", type = "text", required = "required" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12 text-right">
                        <a class="btn btn-lg btn-outline-danger" href="@Url.Action("Positions","Home")"><span class="fa fa-times mr-2"></span>CANCEL</a>
                        <button class="btn btn-lg btn-success ml-3" type="submit"><span class="fa fa-plus mr-2"></span>ADD</button>
                    </div>
                </div>

            }
        </div>
    </div>




