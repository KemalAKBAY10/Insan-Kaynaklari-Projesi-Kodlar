@model HRProject.UI.Models.ViewModels.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/sb-admin.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">
                <h3><span class="fa fa-sign-in fa-2x text-primary mr-3"></span>Login</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.MemberName, new { @class = "form-control", placeholder = "Member Name", required = "required", type = "text" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", placeholder = "Password", required = "required", type = "Password" })
                    </div>
                    <hr />
                    <div class="text-center">
                        <label style="color:red" id="girisKontrol">@ViewBag.LoginError</label>
                    </div>

                    <button class="btn btn-primary btn-block" type="submit">Login</button>
                }

            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/sb-admin.min.js"></script>
    <script src="~/Scripts/jquery.easing.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
</body>
</html>
