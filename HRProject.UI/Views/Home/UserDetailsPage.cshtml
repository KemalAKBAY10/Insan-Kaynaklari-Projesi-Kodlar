                    <a href="@Url.Action("UserPage","Home",new {UserId=Model.SelectedUser.USERID})" class="btn btn-danger btn-md float-right"><span class="fa fa-times"></span></a>
                </div>
            </div>
            @Html.HiddenFor(model => model.SelectedUser.USERID)
            @Html.HiddenFor(model=>model.UserFirstNameAndLastName)
