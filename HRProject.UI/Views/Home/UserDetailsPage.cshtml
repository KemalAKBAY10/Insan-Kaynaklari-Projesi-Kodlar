@model HRProject.UI.Models.HomeControllerModels.UserDetailsPageModel
@{
    ViewBag.Title = "UserDetailsPage";
}

<div class="row my-5">
    <div class="col-md-10 offset-1">
        @using (Html.BeginForm())
