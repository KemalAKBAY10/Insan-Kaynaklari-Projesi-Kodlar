                <label for="staticEmail" class="col-sm-2 col-form-label">SUBCOMPANY</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.SelectedUser.SUBCOMPANY, new { @class = "form-control", type = "text", value = Model.SelectedUser.SUBCOMPANY})
                </div>
            </div>
